<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="Sdk.props" Sdk="Microsoft.DotNet.Arcade.Sdk" />
  <Import Project="$(RepositoryEngineeringDir)TFMConfiguration.props" />
  <Import Project="$(RepositoryEngineeringDir)Packaging.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard1.4;netstandard2.0;$(NetCoreAppCurrent);$(NetCoreAppMinimum);$(NetFrameworkMinimum)</TargetFrameworks>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <LangVersion>Latest</LangVersion>
  </PropertyGroup>

  <!-- Don't let it restore lower versions of this package, which can come transitively from NetStandard package restores (CSProj only) -->
  <ItemGroup Condition=" '$(MSBuildProjectExtension)' == '.csproj' AND '$(TargetFramework)' == 'netstandard1.4' " >
    <PackageReference Include="System.Security.Cryptography.X509Certificates" Version="$(SystemSecurityCryptographyX509CertificatesVersion)" />
  </ItemGroup>
</Project>